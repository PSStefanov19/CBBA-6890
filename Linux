# include/ dir and obj/ dir
IDIR=include
ODIR=obj

# Compiler options and flags
CC=g++
CCFLAGS=-I$(IDIR) 
ERRFLAGS=-Wall -Wunused-variable -Werror

# Put header files here
_DEPS=gameMenu.h
DEPS=$(patsubst %, $(IDIR)/%, $(_DEPS))

# Put cpp files but change extension to .o
_OBJ=main.o gameMenu.o
OBJ=$(patsubst %, $(ODIR)/%, $(_OBJ))

# Libraries
LIBS=-lncurses

# Compile .cpp files to .o files
$(ODIR)/%.o: src/%.cpp $(DEPS)
	$(CC) -c -o $@ $< $(CCFLAGS) $(ERRFLAGS)

# Link .o files and make an executable in bin/ folder
main: $(OBJ)
	$(CC) -o bin/$@.out $^ $(CCFLAGS) $(ERRFLAGS) $(LIBS)